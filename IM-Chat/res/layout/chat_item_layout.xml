<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_chat_item_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_chat_left"
            android:layout_alignParentLeft="true"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:src="@drawable/gco" />

        <LinearLayout
            android:id="@+id/ll_msg_left"
            android:layout_toRightOf="@id/iv_chat_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_othermsg_select"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_chat_lefttxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="huwei"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_chat_item_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/iv_chat_right"
            android:layout_alignParentRight="true"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:src="@drawable/gco" />
        <LinearLayout
            android:id="@+id/ll_msg_right"
            android:layout_toLeftOf="@id/iv_chat_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_selfmsg_select"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/tv_chat_righttxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="huwei"
                android:textSize="16sp" />
        </LinearLayout>

        
    </RelativeLayout>

</LinearLayout>