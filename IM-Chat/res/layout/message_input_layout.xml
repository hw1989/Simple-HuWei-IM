<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_2"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_add_face"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:src="@drawable/add_face_select" />
    <ImageView
        android:id="@+id/iv_chat_more"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:src="@drawable/chat_more_select" />
    <EditText
        android:id="@+id/et_input_message"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_weight="1.0"
        android:background="@drawable/chat_input"
        android:maxLines="1"
        android:paddingBottom="5dip"
        android:paddingTop="5dip"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btn_send_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dip"
        android:background="@drawable/chat_send_select"
        android:paddingBottom="8dip"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:paddingTop="8dip"
        android:text="@string/chat_send"
        android:textColor="#ffffff" />
    
</LinearLayout>