<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DADADA"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_40"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:background="#ffffff"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/et_login_name"
            style="@style/login_et_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:inputType=""/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@drawable/fls" />

        <EditText
            android:id="@+id/et_login_psw"
            style="@style/login_et_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        style="@style/txt_style_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_btn_hei"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/login_btn_select"
        android:text="@string/login_btn" />
   <Button
        android:id="@+id/btn_login_regist"
        style="@style/txt_style_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_btn_hei"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/login_btn_select"
        android:text="@string/login_regist_btn" />
</LinearLayout>