<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="et_style_nobg">
        <item name="android:singleLine">true</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@null</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 模糊 -->

    </style>

    <style name="txt_style_1">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!-- 登陆 用户名与密码 -->
    <style name="login_et_input" parent="et_style_nobg">
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
    </style>
    <!-- radiobutton -->
    <style name="rg_facepage_index">
        <item name="android:button">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/dot_page_select</item>
    </style>
    <!-- setting设置 -->
    <style name="setting_txt_left"></style>
    <!-- 选择照片 -->
    <style name="select_img_txt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/setting_select_txt</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!-- 设置中的普通item -->
    <style name="setting_item_normal">
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">@dimen/setting_item_padding_lr</item>
        <item name="android:paddingRight">@dimen/setting_item_padding_lr</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:textColor">@color/black_1</item>
        <item name="android:textSize">@dimen/setting_item_txtsize</item>
        <item name="android:background">@drawable/setting_item_select</item>
        <item name="android:drawableRight">@drawable/ihr</item>
    </style>
</resources>